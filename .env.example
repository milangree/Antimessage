# Telegram Bot配置
BOT_TOKEN=your_bot_token_here
FORUM_GROUP_ID=-1001234567890

# 管理员ID（逗号分隔）
ADMIN_IDS=123456789,987654321

# Gemini API配置
GEMINI_API_KEY=your_gemini_api_key_here
ENABLE_AI_FILTER=true
AI_CONFIDENCE_THRESHOLD=70

# OpenAI API配置 (可选)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 功能开关
VERIFICATION_ENABLED=true
AUTO_UNBLOCK_ENABLED=true

# 验证选项
VERIFICATION_USE_IMAGE=false
VERIFICATION_IMAGE_CAPTCHA_TYPE=mixed  # digits|letters|mixed
VERIFICATION_USE_CLOUDFLARE=false
CLOUDFLARE_TURNSTILE_SITE_KEY=your_site_key_here
CLOUDFLARE_TURNSTILE_SECRET_KEY=your_secret_key_here
CLOUDFLARE_VERIFY_PAGE_URL=http://localhost:8080/verify

# 数据库配置
DATABASE_PATH=./data/bot.db

# 消息队列配置
MAX_WORKERS=5
QUEUE_TIMEOUT=30

# 验证配置
VERIFICATION_TIMEOUT=300
MAX_VERIFICATION_ATTEMPTS=3

# 速率限制
MAX_MESSAGES_PER_MINUTE=30

# 适用于 Watchtower 的 Telegram 通知（可选。若启用，需删除配置的#注释）
#WATCHTOWER_NOTIFICATIONS=shoutrrr
#WATCHTOWER_NOTIFICATION_URL=telegram://token@telegram?chats=channel-1[,chat-id-1,...]